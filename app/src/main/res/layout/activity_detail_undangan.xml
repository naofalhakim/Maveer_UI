<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.motionlaboratory.meesier.DetailUndanganActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:id="@+id/l_bg_detail_undangan"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:background="@drawable/imgzoom"
                android:orientation="vertical">

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:gravity="center"
                android:paddingTop="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40dp"
                    android:background="@color/colorWhite"
                    android:paddingBottom="20dp"
                    android:paddingTop="30dp">

                    <TextView
                        android:id="@+id/txt_nama_undangan_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="Hotel Shinta" />

                    <RatingBar
                        android:id="@+id/rat_undangan_det"
                        style="@style/Widget.AppCompat.RatingBar.Small"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_toRightOf="@+id/txt_nama_undangan_det"
                        android:elevation="0dp"
                        android:numStars="4"
                        android:rating="3" />

                    <TextView
                        android:id="@+id/txt_kategori_undangan_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_nama_undangan_det"
                        android:layout_centerHorizontal="true"
                        android:text="Kapasis" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/txt_kategori_undangan_det"
                        >

                        <ImageView
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginRight="5dp"
                            android:src="@drawable/ic_pick_location"
                            android:layout_toLeftOf="@+id/txt_lokasi_undangan_det"
                            android:layout_centerVertical="true"
                            />

                        <TextView
                            android:id="@+id/txt_lokasi_undangan_det"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desa Kudu"
                            android:layout_centerVertical="true"
                            android:layout_centerHorizontal="true"
                            />

                        <ImageButton
                            android:id="@+id/imgbtn_fav_undangan"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:background="@android:color/transparent"
                            android:src="@drawable/ic_fav"
                            android:layout_toRightOf="@id/txt_lokasi_undangan_det"
                            android:layout_marginLeft="60dp"
                            />

                    </RelativeLayout>


                </RelativeLayout>

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/face01"

                    />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp">

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="60dp"
                android:orientation="vertical"
                android:padding="8dp">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Base.TextAppearance.AppCompat.Small"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="8dp"
                        android:text="Penawaran Bonus :" />

                    <TextView
                        android:id="@+id/txt_bonus_undangan"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/txt_harga_undangan_det"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="@dimen/fab_margin"
        >

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_pilih_undangan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorWhite"
            android:src="@drawable/ic_next"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih"
            android:gravity="center"
            />

    </LinearLayout>

</RelativeLayout>
