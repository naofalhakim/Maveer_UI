<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context="com.motionlaboratory.meesier.Fragment.AkunFragment">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        >
        <ImageView
            android:id="@+id/img_profile_akun"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/face01"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_camera"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="60dp"
            />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_profile_dark"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/et_nama_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Ali Corners"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_phone_red"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/et_phone_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="082214119366"
            android:inputType="phone"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_email_dark"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/et_email_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="aliconrners@gmail.com"
            android:inputType="textEmailAddress"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_pick_location"
            android:layout_marginRight="10dp"
            />

        <EditText
            android:id="@+id/et_location_akun"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bandung" />

    </LinearLayout>

</LinearLayout>
