<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.motionlaboratory.meesier.Fragment.MainFragment">

    <ImageView
        android:id="@+id/img_slide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/slider1" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_slide"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_marginTop="10dp"
                android:id="@+id/form_buat_acara"
                android:layout_width="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <EditText
                        android:id="@+id/et_nama_acara"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="8pt"
                        android:textColor="@color/colorBlack"
                        android:hint="Nama Acara" />

                </android.support.design.widget.TextInputLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jenis Acara"
                    android:textSize="6pt"
                    android:layout_marginTop="10dp"
                    android:textColor="@color/colorGray"
                    />

                <Spinner
                    android:id="@+id/spin_jenis_acara"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    >

                </Spinner>

                <Button
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="Buat Acara"
                    android:paddingLeft="5dp"
                    android:paddingRight="5dp"
                    android:textColor="@color/colorWhite"
                    android:background="@color/colorOrange"
                    android:layout_gravity="right"
                    android:layout_marginTop="10dp"
                    android:id="@+id/btn_buat_acara"
                    android:textSize="6pt"
                    />

            </LinearLayout>

            <RelativeLayout
                android:layout_below="@+id/form_buat_acara"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:id="@+id/layout_jasa"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jasa"
                        android:paddingLeft="16dp"
                        />

                    <GridLayout
                        android:id="@+id/grid_jasa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:columnCount="3"
                        android:rowCount="2"
                        android:layout_gravity="center_horizontal"
                        android:useDefaultMargins="true"
                        >

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"

                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasafoto"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jasa Fotografi"
                                android:gravity="center"
                                android:textSize="5pt"

                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasadekorasi"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Jasa Dekorasi"
                                android:textSize="5pt" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasasound"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jasa Sound System"
                                android:gravity="center"
                                android:textSize="5pt"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasagedung"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Jasa Gedung"
                                android:textSize="5pt" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasaundangan"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jasa Undangan"
                                android:gravity="center"
                                android:textSize="5pt"
                                />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="100dp"
                            android:layout_height="80dp"
                            android:orientation="vertical"
                            android:background="@color/colorWhite"
                            android:gravity="center"
                            >

                            <ImageButton
                                android:layout_width="match_parent"
                                android:layout_height="70dp"
                                android:src="@drawable/jasamakanan"
                                android:background="@android:color/transparent"
                                />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Jasa Katering"
                                android:gravity="center"
                                android:textSize="5pt"
                                />

                        </LinearLayout>


                    </GridLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_below="@id/layout_jasa"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="16dp"
                        android:text="Paket" />

                    <GridLayout
                        android:id="@+id/grid_paket"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:columnCount="4"
                        android:columnWidth="70dp"
                        android:paddingTop="10dp"
                        android:layout_gravity="center_horizontal"
                        android:useDefaultMargins="true">

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/paket1" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/paket2" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/paket3" />

                        <ImageView
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/paket4" />

                    </GridLayout>

                </LinearLayout>

            </RelativeLayout>

        </LinearLayout>


    </ScrollView>

</RelativeLayout>
